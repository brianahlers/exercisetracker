<h1 class="wkLog">Workout Log</h1>
<div class="container mt-5">
    <div class="row">
        {{#each exercises}}
        <div class="col-md-4 mb-4 card-container">
            <div class="card bg-dark text-white workout-card">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">Date: {{date}}</p>
                    <p class="card-text">Sets: {{sets}}</p>
                    <p class="card-text">Reps: {{reps}}</p>
                    <p class="card-text">Weight: {{weight}}</p>
                    <p class="card-text">RPE: {{rpe}}</p>
                    <p class="card-text">Bodyweight: {{bodyweight}}</p>
                    <p class="card-text">Comments: {{comments}}</p>
                    <p class="card-text">User: {{user.name}}</p>
                    <button class="btn btn-primary btn-sm update-workout" data-workout-id="{{id}}">Update</button>
                    <button class="btn btn-danger btn-sm delete-workout" data-workout-id="{{id}}">Delete</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

